<p id="notice"><%= notice %></p>

<h1>店舗</h1>

<table>
  <thead>
    <tr>
      <th>店舗名</th>
      <th>メールアドレス</th>
      <th>最大席数</th>
      <th>電話番号</th>
      <th>タイトル</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.email %></td>
        <td><%= client.max_seat %></td>
        <td><%= client.phone_number %></td>
        <td><%= client.title %></td>
        <td><%= link_to '店舗詳細', client %></td>
        <td><%= link_to '編集', edit_client_path(client) %></td>
        <td><%= link_to '削除', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

